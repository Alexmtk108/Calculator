<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#212A35"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Переключатель темы -->
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/switchToLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch to Light"
            android:textColor="#AAAAAA"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/purple_700"
            android:trackTint="@color/track_color"
            android:checked="false" />
    </LinearLayout>
    -->

    <!-- Диспей -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:padding="16dp"
        android:background="#2A2B30">

        <!-- Диспей ввода -->
        <TextView
            android:id="@+id/inputDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:textColor="#AAAAAA" />

        <!-- Дисплей результата -->
        <TextView
            android:id="@+id/resultDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- Панель кнопок -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:paddingTop="16dp">

        <!-- 1 строка -->
        <Button
            android:text="C"
            android:id="@+id/button_clear"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#333339" />

        <Button
            android:text="()"
            android:id="@+id/button_parentheses"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#333339" />

        <Button
            android:text="%"
            android:id="@+id/button_percent"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#333339" />

        <Button
            android:text="/"
            android:id="@+id/button_divide"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#7B3FE4"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"/>

        <!-- 2 строка(7, 8, 9) -->
        <Button
            android:text="7"
            android:id="@+id/button_7"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="8"
            android:id="@+id/button_8"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="9"
            android:id="@+id/button_9"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="x"
            android:id="@+id/button_multiply"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#7B3FE4" />

        <!-- 3 строка (4, 5, 6) -->
        <Button
            android:text="4"
            android:id="@+id/button_4"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="5"
            android:id="@+id/button_5"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="6"
            android:id="@+id/button_6"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="-"
            android:id="@+id/button_subtract"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#7B3FE4" />

        <!-- 4 строка (1, 2, 3) -->
        <Button
            android:text="1"
            android:id="@+id/button_1"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="2"
            android:id="@+id/button_2"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="3"
            android:id="@+id/button_3"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="+"
            android:id="@+id/button_add"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#7B3FE4" />

        <!-- 5 строка (+-, 0, ., =) -->
        <Button
            android:text="+/-"
            android:id="@+id/button_sign"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="0"
            android:id="@+id/button_0"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="."
            android:id="@+id/button_dot"
            style="@style/CalculatorButtonStyle" />

        <Button
            android:text="="
            android:id="@+id/button_equals"
            style="@style/CalculatorButtonStyle"
            android:backgroundTint="#FF0062" />
    </GridLayout>

</LinearLayout>
